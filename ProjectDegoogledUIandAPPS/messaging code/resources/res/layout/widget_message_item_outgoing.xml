<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/widget_message_item_outgoing" android:paddingLeft="8dp" android:paddingRight="8dp" android:paddingBottom="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <FrameLayout android:layout_gravity="top" android:id="@+id/avatarFrame" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/WidgetConversationItemAvatarOutgoing">
        <ImageView android:id="@+id/avatarShadow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="-4dp" android:src="@drawable/ic_widget_avatar_shadow" android:layout_centerVertical="true" android:contentDescription="@null" android:importantForAccessibility="no" style="@style/WidgetConversationItemOutgoingAvatarShadow"/>
        <ImageView android:id="@+id/avatarView" android:layout_width="@dimen/contact_icon_view_normal_size" android:layout_height="@dimen/contact_icon_view_normal_size" android:scaleType="fitXY" android:layout_centerVertical="true" android:contentDescription="@null" android:importantForAccessibility="no"/>
        <ImageView android:id="@+id/conversation_failed_status_icon" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_failed_status_red" android:contentDescription="@null" android:importantForAccessibility="no" style="@style/WidgetConversationItemFailed"/>
    </FrameLayout>
    <LinearLayout android:layout_gravity="top" android:orientation="vertical" android:background="@drawable/widget_msg_bubble_outgoing_new" android:paddingRight="8px" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/WidgetConversationItemBodyOutgoing">
        <TextView android:textAppearance="?android:attr/textAppearanceSmallInverse" android:textSize="16sp" android:textColor="@color/widget_outgoing_text_color" android:ellipsize="end" android:id="@+id/message" android:paddingLeft="6dp" android:paddingTop="6dp" android:paddingRight="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="3dp" android:layout_alignParentBottom="true" style="@style/WidgetConversationItemWidget"/>
        <TextView android:textAppearance="?android:attr/textAppearanceSmallInverse" android:textSize="12sp" android:textColor="@color/timestamp_text_outgoing" android:id="@+id/date" android:paddingLeft="6dp" android:paddingRight="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="9dp" android:singleLine="true" style="@style/WidgetConversationItemDate"/>
        <FrameLayout android:id="@+id/attachmentFrame" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <ImageView android:id="@+id/attachment" android:layout_width="wrap_content" android:layout_height="wrap_content" android:adjustViewBounds="true" android:contentDescription="@null" android:importantForAccessibility="no" style="@style/WidgetConversationItemAttachment"/>
            <ImageView android:layout_gravity="center" android:id="@+id/playButton" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_video_play_light" android:contentDescription="@null" android:importantForAccessibility="no"/>
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>
