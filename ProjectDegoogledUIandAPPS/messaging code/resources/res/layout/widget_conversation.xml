<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@android:color/transparent" android:padding="@dimen/widget_margin" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="horizontal" android:id="@+id/widget_header" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="48dp" android:layout_alignParentTop="true">
        <TextView android:layout_gravity="center_vertical" android:id="@+id/widget_label" android:layout_width="0dp" android:layout_height="wrap_content" android:freezesText="true" android:layout_weight="1" style="@style/WidgetConversationTitle"/>
        <ImageView android:id="@+id/launcher_icon" android:paddingTop="12dp" android:paddingBottom="12dp" android:visibility="gone" android:layout_width="0dp" android:layout_height="wrap_content" android:src="@drawable/ic_launcher" android:scaleType="fitStart" android:layout_weight="1" android:importantForAccessibility="no"/>
        <ImageButton android:layout_gravity="center_vertical" android:id="@+id/widget_goto_conversation_list" android:background="?android:attr/selectableItemBackground" android:layout_width="@dimen/widget_header_new_conv_button_width" android:layout_height="match_parent" android:src="@drawable/ic_widget_list" android:contentDescription="@string/widget_conversation_list_content_description" style="@style/WidgetHeaderImage"/>
    </LinearLayout>
    <ListView android:id="@+id/message_list" android:layout_width="match_parent" android:layout_height="0dp" android:layout_marginTop="-2dp" android:drawSelectorOnTop="true" android:stackFromBottom="true" android:transcriptMode="alwaysScroll" android:divider="@null" android:layout_weight="1" android:layout_above="@+id/bottom_line" android:layout_below="@+id/top_line" android:overScrollMode="never"/>
    <TextView android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/widget_configuration" android:paddingLeft="20dp" android:paddingRight="20dp" android:paddingBottom="20dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="0dp" android:text="@string/tap_to_configure" android:singleLine="false" android:layout_weight="1" android:layout_above="@+id/bottom_line" android:layout_below="@+id/top_line" style="@style/WidgetConversationTitle"/>
    <ImageView android:id="@+id/top_line" android:background="@drawable/widget_hr" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="-2dp" android:layout_below="@+id/widget_header" android:contentDescription="@null" android:importantForAccessibility="no"/>
    <ImageView android:id="@+id/bottom_line" android:background="@drawable/widget_hr" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="-2dp" android:layout_alignParentBottom="true" android:contentDescription="@null" android:importantForAccessibility="no"/>
</RelativeLayout>
