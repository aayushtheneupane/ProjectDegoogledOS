<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:androidprv="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:orientation="vertical" android:background="#9a393a3c" android:padding="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_above="@+id/dummyLine" android:layout_marginHorizontal="30dp">
        <TextClock android:textSize="20sp" android:textColor="#fff" android:id="@+id/clock" android:paddingBottom="@dimen/widget_vertical_padding_clock" android:layout_width="match_parent" android:layout_height="wrap_content" android:alpha="0.75" android:format12Hour="@string/keyguard_widget_12_hours_format" android:format24Hour="@string/keyguard_widget_24_hours_format" android:letterSpacing="0.1"/>
        <TextClock android:textSize="32sp" android:textColor="#fff" android:id="@+id/bigDate" android:layout_width="wrap_content" android:layout_height="wrap_content" android:format12Hour="EEEE, MMMM" android:format24Hour="EEEE, MMMM" android:letterSpacing="0.2"/>
        <TextClock android:textSize="32sp" android:textColor="#fff" android:id="@+id/bigDateDay" android:layout_width="match_parent" android:layout_height="wrap_content" android:format12Hour="d" android:format24Hour="d" android:letterSpacing="0.2"/>
    </LinearLayout>
    <View android:id="@+id/dummyLine" android:background="#00000000" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:layout_centerInParent="true"/>
</RelativeLayout>
