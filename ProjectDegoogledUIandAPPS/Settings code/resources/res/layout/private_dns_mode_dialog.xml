<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:settings="http://schemas.android.com/apk/res/com.android.settings" xmlns:androidprv="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:padding="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RadioGroup android:id="@+id/private_dns_radio_group" android:layout_width="match_parent" android:layout_height="wrap_content">
            <RadioButton android:id="@+id/private_dns_mode_off" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minHeight="48dp" android:text="@string/private_dns_mode_off" android:layout_marginStart="8dp"/>
            <RadioButton android:id="@+id/private_dns_mode_opportunistic" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minHeight="48dp" android:text="@string/private_dns_mode_opportunistic" android:layout_marginStart="8dp"/>
            <RadioButton android:id="@+id/private_dns_mode_provider" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minHeight="48dp" android:text="@string/private_dns_mode_provider" android:layout_marginStart="8dp"/>
            <EditText android:id="@+id/private_dns_mode_provider_hostname" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="48dp" android:hint="@string/private_dns_mode_provider_hostname_hint" android:inputType="textFilter" android:imeOptions="actionDone" android:layout_marginStart="40dp" android:layout_marginEnd="8dp" style="@style/Widget.CompoundButton.RadioButton"/>
        </RadioGroup>
        <TextView android:textAppearance="?android:attr/textAppearanceSmall" android:id="@+id/private_dns_help_info" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:minHeight="48dp" android:paddingStart="16dp"/>
    </LinearLayout>
</ScrollView>
