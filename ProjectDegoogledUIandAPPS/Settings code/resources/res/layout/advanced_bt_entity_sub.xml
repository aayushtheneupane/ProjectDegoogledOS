<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:settings="http://schemas.android.com/apk/res/com.android.settings" xmlns:androidprv="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
    <ImageView android:layout_gravity="center_horizontal" android:id="@+id/header_icon" android:background="@drawable/circle_outline" android:padding="8dp" android:layout_width="72dp" android:layout_height="72dp" android:antialias="true" android:scaleType="fitCenter"/>
    <TextView android:ellipsize="marquee" android:layout_gravity="center_horizontal" android:id="@+id/header_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="24dp" android:singleLine="false" android:textDirection="locale" style="@style/TextAppearance.EntityHeaderTitle"/>
    <LinearLayout android:layout_gravity="center_horizontal" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp">
        <ImageView android:layout_gravity="center" android:id="@+id/bt_battery_icon" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:layout_gravity="center_horizontal" android:id="@+id/bt_battery_summary" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="4dp" style="@style/TextAppearance.EntityHeaderSummary"/>
    </LinearLayout>
</LinearLayout>
