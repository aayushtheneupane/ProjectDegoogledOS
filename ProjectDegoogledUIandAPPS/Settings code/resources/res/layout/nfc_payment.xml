<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:settings="http://schemas.android.com/apk/res/com.android.settings" xmlns:androidprv="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <ImageView android:gravity="center" android:id="@+id/nfc_payment_tap_image" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:src="@drawable/tapandpay_emptystate"/>
            <TextView android:textSize="24sp" android:gravity="center" android:id="@+id/nfc_payment_empty_text" android:paddingTop="32dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/nfc_payment_no_apps"/>
        </LinearLayout>
        <ListView android:id="@android:id/list" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="match_parent" android:drawSelectorOnTop="false"/>
    </FrameLayout>
</LinearLayout>
