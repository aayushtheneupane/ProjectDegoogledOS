<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:settings="http://schemas.android.com/apk/res/com.android.settings" xmlns:androidprv="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:gravity="center_horizontal" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="match_parent" android:paddingStart="20dp" android:paddingEnd="20dp">
        <TextView android:id="@+id/color_red_text" android:paddingTop="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/color_red_title"/>
        <TextView android:id="@+id/color_red_value" android:paddingTop="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true"/>
        <com.android.settings.IntervalSeekBar android:id="@+id/color_red_seekbar" android:paddingTop="2dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/color_red_text" settings:defaultValue="1" settings:digits="4" settings:maxI="1" settings:minI="0.2"/>
        <TextView android:id="@+id/color_green_text" android:paddingTop="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/color_green_title" android:layout_below="@+id/color_red_seekbar"/>
        <TextView android:id="@+id/color_green_value" android:paddingTop="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/color_red_seekbar" android:layout_alignParentRight="true"/>
        <com.android.settings.IntervalSeekBar android:id="@+id/color_green_seekbar" android:paddingTop="2dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/color_green_text" settings:defaultValue="1" settings:digits="4" settings:maxI="1" settings:minI="0.2"/>
        <TextView android:id="@+id/color_blue_text" android:paddingTop="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/color_blue_title" android:layout_below="@+id/color_green_seekbar"/>
        <TextView android:id="@+id/color_blue_value" android:paddingTop="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/color_green_seekbar" android:layout_alignParentRight="true"/>
        <com.android.settings.IntervalSeekBar android:id="@+id/color_blue_seekbar" android:paddingTop="2dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/color_blue_text" settings:defaultValue="1" settings:digits="4" settings:maxI="1" settings:minI="0.2"/>
        <ImageView android:id="@+id/black_scale_picture_color" android:paddingTop="20dp" android:layout_width="match_parent" android:layout_height="40dp" android:src="@drawable/color_tuning_preview" android:layout_below="@+id/color_blue_seekbar"/>
    </RelativeLayout>
</ScrollView>
