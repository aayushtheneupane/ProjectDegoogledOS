<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:settings="http://schemas.android.com/apk/res/com.android.settings" xmlns:androidprv="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:title="@string/location_settings_title" android:key="location_settings" app:keywords="@string/keywords_location">
    <PreferenceCategory android:title="@string/location_category_recent_location_requests" android:key="recent_location_requests"/>
    <Preference android:icon="@drawable/ic_chevron_right_24dp" android:title="@string/location_recent_location_requests_see_all" android:key="recent_location_requests_see_all_button" android:fragment="com.android.settings.location.RecentLocationRequestSeeAllFragment" app:searchable="false"/>
    <PreferenceCategory android:layout="@layout/preference_category_no_label" android:key="location_advanced_settings" app:initialExpandedChildrenCount="2">
        <Preference android:title="@string/location_app_level_permissions" android:key="app_level_permissions">
            <intent android:action="android.intent.action.MANAGE_PERMISSION_APPS">
                <extra android:name="android.intent.extra.PERMISSION_NAME" android:value="android.permission-group.LOCATION"/>
            </intent>
        </Preference>
        <Preference android:title="@string/location_scanning_screen_title" android:key="location_scanning" android:fragment="com.android.settings.location.ScanningSettings"/>
        <com.android.settingslib.RestrictedSwitchPreference android:enabled="false" android:title="@string/managed_profile_location_switch_title" android:selectable="true" android:key="managed_profile_location_switch" app:useAdminDisabledSummary="true"/>
        <PreferenceCategory android:layout="@layout/preference_category_no_label" android:key="location_services"/>
        <PreferenceCategory android:title="@string/managed_profile_location_services" android:key="location_services_managed_profile"/>
    </PreferenceCategory>
    <PreferenceCategory android:layout="@layout/preference_category_no_label" android:key="location_footer" app:allowDividerAbove="false"/>
</PreferenceScreen>
