        <com.havoc.support.preferences.SystemSettingSwitchPreference android:title="@string/lockscreen_show_status_bar_title" android:key="lockscreen_show_status_bar" android:summary="@string/lockscreen_show_status_bar_summary" android:defaultValue="true"/>
