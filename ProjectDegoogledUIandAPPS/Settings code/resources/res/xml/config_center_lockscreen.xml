    </PreferenceCategory>
    <PreferenceCategory android:title="@string/ls_unlocking" android:key="ls_unlocking">
        <com.havoc.support.preferences.SystemSettingSwitchPreference android:title="@string/pocket_judge_title" android:key="pocket_judge" android:summary="@string/pocket_judge_summary" android:defaultValue="false"/>
