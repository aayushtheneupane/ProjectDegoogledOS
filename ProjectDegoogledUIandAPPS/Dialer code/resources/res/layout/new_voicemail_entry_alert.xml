        <Button android:textColor="?android:attr/colorPrimary" android:id="@+id/voicemail_alert_primary_button" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/TosButtonStyle"/>
    </LinearLayout>
    <View android:background="#12000000" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="8dp" android:layout_marginBottom="8dp"/>
</LinearLayout>
