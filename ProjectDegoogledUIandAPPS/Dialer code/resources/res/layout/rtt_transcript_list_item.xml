<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginEnd="8dp">
    <LinearLayout android:orientation="horizontal" android:id="@+id/rtt_chat_message_container" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <ImageView android:id="@+id/rtt_chat_avatar" android:visibility="gone" android:layout_width="@dimen/rtt_transcript_avatar_size" android:layout_height="@dimen/rtt_transcript_avatar_size" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>
        <TextView android:id="@+id/rtt_chat_message" android:background="@drawable/message_bubble" android:paddingTop="9dp" android:paddingBottom="9dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxWidth="292dp" android:paddingStart="12dp" android:paddingEnd="12dp" android:backgroundTint="@color/bubble_background" style="@style/RttTranscriptBubble"/>
    </LinearLayout>
    <TextView android:id="@+id/rtt_chat_timestamp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="64dp" android:paddingEnd="8dp" style="@style/RttTranscriptBubble.Timestamp"/>
</LinearLayout>
