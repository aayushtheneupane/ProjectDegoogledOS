<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginBottom="12dp">
    <FrameLayout android:layout_gravity="center_horizontal" android:id="@+id/avatar_container" android:layout_width="wrap_content" android:layout_height="104dp" android:layout_marginBottom="8dp" android:minWidth="128dp">
        <QuickContactBadge android:layout_gravity="center_horizontal" android:id="@+id/avatar" android:clickable="false" android:layout_width="104dp" android:layout_height="104dp"/>
        <FrameLayout android:layout_gravity="bottom|right|center_vertical|center_horizontal|center|end" android:id="@+id/video_call_container" android:layout_width="36dp" android:layout_height="36dp" android:layout_marginEnd="12dp">
            <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/favorite_icon"/>
            <ImageView android:layout_gravity="center" android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/quantum_ic_videocam_vd_white_24"/>
        </FrameLayout>
    </FrameLayout>
    <TextView android:textSize="14sp" android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:id="@+id/name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginBottom="1dp" android:fontFamily="sans-serif-medium" android:layout_marginStart="4dp" android:layout_marginEnd="4dp" style="@style/Dialer.TextAppearance.Primary"/>
    <TextView android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:id="@+id/phone_type" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="17dp" android:layout_marginStart="4dp" android:layout_marginEnd="4dp" style="@style/Dialer.TextAppearance.Secondary"/>
</LinearLayout>
