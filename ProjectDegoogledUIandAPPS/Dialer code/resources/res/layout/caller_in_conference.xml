    <ImageButton android:id="@+id/conferenceCallerDisconnect" android:background="?android:attr/selectableItemBackgroundBorderless" android:clickable="true" android:layout_width="@dimen/conference_call_manager_button_dimension" android:layout_height="@dimen/conference_call_manager_button_dimension" android:src="@drawable/quantum_ic_call_end_white_24" android:scaleType="center" android:tint="?attr/colorIcon" android:contentDescription="@string/conference_caller_disconnect_content_description" android:layout_marginStart="8dp"/>
</LinearLayout>
