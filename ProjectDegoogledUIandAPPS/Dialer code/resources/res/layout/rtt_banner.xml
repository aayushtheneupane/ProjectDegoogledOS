<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:background="?android:attr/colorPrimaryDark" android:layout_width="match_parent" android:layout_height="@dimen/rtt_banner_height" android:elevation="3dp">
        <ImageButton android:id="@+id/rtt_end_call_button" android:background="@android:color/transparent" android:padding="@dimen/rtt_banner_button_padding" android:layout_width="@dimen/rtt_banner_height" android:layout_height="@dimen/rtt_banner_height" android:src="@drawable/quantum_ic_call_end_vd_theme_24" android:scaleType="fitXY" android:tint="@color/dialer_end_call_button_color" android:contentDescription="@string/incall_content_description_end_call" android:layout_marginStart="4dp" android:layout_marginEnd="4dp"/>
        <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginTop="8dp" android:layout_marginBottom="8dp" android:layout_weight="1">
            <TextView android:textSize="20sp" android:textColor="#ffffff" android:layout_gravity="center_horizontal" android:id="@+id/rtt_name_or_number" android:layout_width="wrap_content" android:layout_height="wrap_content" android:includeFontPadding="false" android:fontFamily="sans-serif-medium"/>
            <Chronometer android:textSize="14sp" android:textColor="#ffffff" android:layout_gravity="center_horizontal" android:id="@+id/rtt_timer" android:layout_width="wrap_content" android:layout_height="wrap_content" android:includeFontPadding="false" android:fontFamily="sans-serif-medium"/>
        </LinearLayout>
        <ImageButton android:id="@+id/rtt_overflow_button" android:background="@android:color/transparent" android:padding="@dimen/rtt_banner_button_padding" android:layout_width="@dimen/rtt_banner_height" android:layout_height="@dimen/rtt_banner_height" android:src="@drawable/quantum_ic_more_vert_vd_theme_24" android:scaleType="fitXY" android:tint="?attr/colorIconOnUnthemedDarkBackground" android:contentDescription="@string/content_description_overflow" android:layout_marginStart="8dp"/>
    </LinearLayout>
    <FrameLayout android:id="@+id/rtt_on_hold_banner" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <TextView android:textSize="14sp" android:textColor="#dd000000" android:gravity="center_vertical" android:id="@+id/rtt_status_banner" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="48dp" android:paddingStart="16dp" android:paddingEnd="16dp"/>
</LinearLayout>
