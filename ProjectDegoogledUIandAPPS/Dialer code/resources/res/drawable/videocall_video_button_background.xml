<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:color="@color/incall_button_ripple">
    <item android:id="@android:id/mask">
        <inset android:inset="5dp">
            <shape android:shape="oval">
                <solid android:color="@android:color/white"/>
            </shape>
        </inset>
    </item>
    <item>
        <selector>
            <item android:state_checked="true" android:state_pressed="true" android:drawable="@drawable/video_button_bg_checked_pressed"/>
            <item android:state_checked="true" android:drawable="@drawable/video_button_bg_checked"/>
            <item android:state_pressed="true" android:drawable="@drawable/video_button_bg_pressed"/>
            <item android:drawable="@drawable/video_button_bg_default"/>
        </selector>
    </item>
</ripple>
